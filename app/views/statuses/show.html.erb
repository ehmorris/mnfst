<section class="status">
  <section class="status-author">
    <p>
      <a href="https://pgp.mit.edu/pks/lookup?op=vindex&search=<%= @status.formatted_keyid %>">
        <%= @status.formatted_keyid %> wrote...
      </a>
    </p>
  </section>

  <section class="status-body">
    <p><%= @status.body %></p>
  </section>

  <section class="author-validation">
    <p><%= @status.formatted_keyid %>'s key has been signed by <%= pluralize @status.key.signers.count, "people" %>.</p>
  </section>
</section>

<section class="status-original">
  <section class="status-original-body">
<pre>
<%= @status.signed_body %>
</pre>
  </section>
</div>
